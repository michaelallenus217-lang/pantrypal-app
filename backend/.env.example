# PantryPal Backend Environment Variables
# Copy this file to .env and fill in your actual values

# ============================================
# Application Settings
# ============================================
APP_NAME=PantryPal
APP_VERSION=0.1.0
ENVIRONMENT=development  # development, staging, production
DEBUG=True

# ============================================
# Server Configuration
# ============================================
HOST=0.0.0.0
PORT=8000

# ============================================
# Database Configuration
# ============================================
# Development database
DATABASE_URL=postgresql://postgres:yourpassword@localhost:5432/pantrypal_dev

# For async operations (optional)
ASYNC_DATABASE_URL=postgresql+asyncpg://postgres:yourpassword@localhost:5432/pantrypal_dev

# Connection pool settings
DB_POOL_SIZE=5
DB_MAX_OVERFLOW=10

# ============================================
# Security & Authentication
# ============================================
# Generate with: python -c "import secrets; print(secrets.token_urlsafe(32))"
SECRET_KEY=your-secret-key-here-change-this-in-production

# JWT settings
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=1440  # 24 hours
REFRESH_TOKEN_EXPIRE_DAYS=7

# Password hashing
BCRYPT_SALT_ROUNDS=12

# ============================================
# External APIs
# ============================================

# Open Food Facts (barcode lookup)
OPEN_FOOD_FACTS_API_URL=https://world.openfoodfacts.org/api/v0

# Spoonacular (recipe data)
SPOONACULAR_API_KEY=your-spoonacular-api-key-here
SPOONACULAR_API_URL=https://api.spoonacular.com

# Edamam (alternative recipe API)
EDAMAM_APP_ID=your-edamam-app-id
EDAMAM_APP_KEY=your-edamam-app-key
EDAMAM_API_URL=https://api.edamam.com

# ============================================
# CORS Settings
# ============================================
# Comma-separated list of allowed origins
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:19006,http://localhost:8081

# ============================================
# Rate Limiting
# ============================================
RATE_LIMIT_REQUESTS_PER_MINUTE=100

# ============================================
# File Upload
# ============================================
MAX_UPLOAD_SIZE_MB=10
ALLOWED_IMAGE_TYPES=image/jpeg,image/png,image/webp

# ============================================
# Email (for future notifications)
# ============================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
EMAIL_FROM=noreply@pantrypal.app

# ============================================
# Logging
# ============================================
LOG_LEVEL=INFO  # DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_FORMAT=json  # json or text

# ============================================
# Testing
# ============================================
TEST_DATABASE_URL=postgresql://postgres:yourpassword@localhost:5432/pantrypal_test

# ============================================
# Production Only
# ============================================

# Sentry (error tracking)
SENTRY_DSN=

# Redis (caching - future)
REDIS_URL=redis://localhost:6379/0

# AWS S3 (file storage - future)
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_S3_BUCKET=
AWS_REGION=us-east-1

# ============================================
# Feature Flags
# ============================================
ENABLE_RECIPE_RECOMMENDATIONS=True
ENABLE_BARCODE_SCANNING=True
ENABLE_NOTIFICATIONS=True
ENABLE_ANALYTICS=False  # Enable in production
